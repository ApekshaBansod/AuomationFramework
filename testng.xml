<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="SauceDemo Test Suite" parallel="tests" thread-count="3">
    
    <!-- Chrome Tests -->
    <test name="Chrome Tests">
        <parameter name="browser" value="chrome"/>
        <parameter name="headless" value="false"/>
        <classes>
            <class name="org.example.tests.LoginTest"/>
            <class name="org.example.tests.ProductTest"/>
            <class name="org.example.tests.CartTest"/>
            <class name="org.example.tests.CheckoutTest"/>
        </classes>
    </test>

    <!-- Firefox Tests -->
    <test name="Firefox Tests">
        <parameter name="browser" value="firefox"/>
        <parameter name="headless" value="false"/>
        <classes>
            <class name="org.example.tests.LoginTest"/>
            <class name="org.example.tests.ProductTest"/>
            <class name="org.example.tests.CartTest"/>
            <class name="org.example.tests.CheckoutTest"/>
        </classes>
    </test>

    <!-- TestNG Listener -->
    <listeners>
        <listener class-name="org.example.listeners.TestListener"/>
    </listeners>

</suite>
